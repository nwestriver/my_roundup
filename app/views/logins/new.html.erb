<div class="main login_main">    
    <div class="form_title">
    <h1>ログイン画面</h1>
    </div>
    <div class="login_form">
        <%= form_with url: login_path do |f| %>
            <div>
                <%= f.label :name, 'ユーザー名'%><br>
                <%= f.text_field :name %>
            </div>
            <div>
                <%= f.label :email, "メールアドレス"%><br>
                <%= f.text_field :email%>
            </div>
            <div>
                <%= f.submit "ログイン" %>
            </div>
        <% end %>
    </div>
</div>